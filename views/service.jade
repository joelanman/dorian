extends layout

block content

	main.page-upload

		h1= service.service

		details
			summary= selectedDate.friendly

			.inner

				ul.last-element
					each datetime in datetimes

						li
							a(href="/services/#{service.slug}?datetime=#{datetime.iso}")= datetime.friendly

		h2 Journeys

		ul
			each journey in service.journeys

				li
					a(href="/services/#{service.slug}/#{journey.slug}#{selectedDate.query}")= journey.name